{
    "files.associations": {
        "array": "cpp",
        "*.tcc": "cpp",
        "memory": "cpp",
        "future": "cpp",
        "istream": "cpp",
        "functional": "cpp",
        "tuple": "cpp",
        "utility": "cpp"
    },
    "clangd.arguments": [
        "--compile-commands-dir=/workspaces/build/canonical/swift-linux-x86_64"
    ],
    "clang-format.fallbackStyle": "LLVM",
    "clang-format.style": "LLVM",
    "cmake.generator": "Ninja",
    "cmake.sourceDirectory": "${workspaceFolder}",
    "editor.renderIndentGuides": false,
    "editor.rulers": [
        80
    ],
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    }
}