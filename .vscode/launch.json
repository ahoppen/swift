{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug selected CMake product",
            "type": "lldb",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": "-typecheck /workspaces/swift/test.swift",
            // "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    // add the directory where our target was built to the PATHs
                    // it gets resolved by CMake Tools:
                    "name": "PATH",
                    "value": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
                },
            ],
            "externalConsole": true,
            "MIMode": "lldb"
        },
        {
            "name": "Debug Swift product",
            "type": "lldb",
            "request": "launch",
            "program": "/workspaces/swift/main",
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    // add the directory where our target was built to the PATHs
                    // it gets resolved by CMake Tools:
                    "name": "PATH",
                    "value": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
                },
            ],
            "externalConsole": true,
            "MIMode": "lldb"
        }
    ],
    
}